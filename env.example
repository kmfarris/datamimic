# Production database configuration
PROD_DB_HOST=localhost
PROD_DB_PORT=3306
PROD_DB_USER=user
PROD_DB_PASSWORD=password
PROD_DB_NAME=database

# Local database configuration (where DataProxy stores data)
LOCAL_DB_HOST=localhost
LOCAL_DB_PORT=3306
LOCAL_DB_USER=user
LOCAL_DB_PASSWORD=password
LOCAL_DB_NAME=dataproxy_local

# DataProxy server configuration
PROXY_HOST=localhost
PROXY_PORT=3307

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=dataproxy.log

# Performance settings
MAX_CONNECTIONS=100
QUERY_TIMEOUT=30
BUFFER_SIZE=8192
